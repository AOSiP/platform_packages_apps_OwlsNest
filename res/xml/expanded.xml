<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:layout="@layout/tab_ui"
    android:title="@string/expanded_category" >

    <com.aosip.owlsnest.preference.SystemSettingSwitchPreference
        android:key="status_bar_quick_qs_pulldown"
        android:title="@string/status_bar_quick_qs_pulldown"
        android:summary="@string/status_bar_quick_qs_pulldown_summary"
        android:defaultValue="true" />

    <com.aosip.owlsnest.preference.CustomSeekBarPreference
        android:key="qs_rows_portrait"
        android:title="@string/qs_rows_portrait_title"
        android:max="5"
        settings:min="1"
        settings:units="" />

    <com.aosip.owlsnest.preference.CustomSeekBarPreference
        android:key="qs_rows_landscape"
        android:title="@string/qs_rows_landscape_title"
        android:max="3"
        settings:min="1"
        settings:units="" />

    <com.aosip.owlsnest.preference.CustomSeekBarPreference
        android:key="qs_columns_portrait"
        android:title="@string/qs_columns_portrait_title"
        android:max="7"
        settings:min="1"
        settings:units="" />

    <com.aosip.owlsnest.preference.CustomSeekBarPreference
        android:key="qs_columns_landscape"
        android:title="@string/qs_columns_landscape_title"
        android:max="9"
        settings:min="1"
        settings:units="" />

</PreferenceScreen>

