<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:layout="@layout/tab_ui"
    android:title="@string/icon_category" >

    <Preference
            android:title="@string/status_bar_icon_blacklist_title"
            android:summary="@string/status_bar_icon_blacklist_summary">
        <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.StatusBarIconsTunerActivity" />
    </Preference>

    <com.aosip.owlsnest.preference.SystemSettingListPreference
        android:key="status_bar_logo"
        android:title="@string/status_bar_logo_title"
        android:dialogTitle="@string/status_bar_logo_dialog_title"
        android:entries="@array/status_bar_logo_entries"
        android:entryValues="@array/status_bar_logo_values"
        android:defaultValue="0" />

    <com.aosip.owlsnest.preference.SystemSettingSwitchPreference
            android:key="roaming_indicator_icon"
            android:title="@string/roaming_indicator_icon_title"
            android:summary="@string/roaming_indicator_icon_summary"
            android:defaultValue="true"/>

</PreferenceScreen>

