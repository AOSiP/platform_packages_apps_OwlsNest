<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/statusbar_bar_title" >

    <Preference
        android:key="battery"
        android:title="@string/battery_category"
        android:fragment="com.aosip.owlsnest.statusbar.Battery" />

    <Preference
        android:key="carrier_label"
        android:title="@string/status_carrier_title"
        android:fragment="com.aosip.owlsnest.statusbar.CarrierLabel" />

    <Preference
        android:key="clock"
        android:title="@string/status_bar_clock"
        android:fragment="com.aosip.owlsnest.statusbar.Clock" />

    <Preference
        android:key="network_traffic"
        android:title="@string/network_traffic_state_title"
        android:fragment="com.aosip.owlsnest.statusbar.NetworkTraffic" />

    <PreferenceCategory
        android:title="@string/status_bar_icons_title">
        <PreferenceScreen
            android:key="status_bar_icons"
            android:title="@string/status_bar_system_icons_title"
            android:summary="@string/status_bar_system_icons_summary">
            <intent android:action="com.android.settings.action.STATUS_BAR_TUNER" />
        </PreferenceScreen>

         <SwitchPreference
            android:key="status_bar_logo"
            android:title="@string/kronic_logo_title"
            android:summary="@string/kronic_logo_summary"
            android:defaultValue="false" />

         <ListPreference
            android:key="status_bar_logo_style"
            android:entries="@array/status_bar_logo_style_entries"
            android:entryValues="@array/status_bar_logo_style_values"
            android:summary="%s"
            android:dependency="status_bar_logo"
            android:title="@string/status_bar_logo_style_title" />

         <com.aosip.support.preference.SystemSettingSwitchPreference
            android:key="show_volte_icon"
            android:title="@string/volte_switch_title"
            android:summary="@string/volte_switch_summary"
            android:defaultValue="false" />

         <com.aosip.support.preference.SystemSettingListPreference
            android:key="volte_icon_style"
            android:title="@string/volte_icon_style_title"
            android:entries="@array/volte_icon_type_entries"
            android:entryValues="@array/volte_icon_type_values"
            android:summary="%s"
            android:defaultValue="0"/>

         <com.aosip.support.preference.SystemSettingSwitchPreference
            android:key="show_fourg"
            android:title="@string/show_fourg_title"
            android:summary="@string/show_fourg_summary"
            android:defaultValue="false" />

         <com.aosip.support.preference.SystemSettingSwitchPreference
            android:key="use_old_mobiletype"
            android:title="@string/use_old_mobiletype_title"
            android:summary="@string/use_old_mobiletype_summary"
            android:defaultValue="false" />

         <Preference
            android:icon="@drawable/ic_info_outline_24dp"
            android:persistent="false"
            android:summary="@string/mobile_data_style_info_title" />
    </PreferenceCategory>

</PreferenceScreen>
